  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "current file",
      "program": "${file}",
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ts",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "npm: tsc"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "i18n",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/i18n/test/index.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "npm: tsc"
    }
  ]
}
