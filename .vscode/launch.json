  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "current",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "npm: tsc"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "i18nRun",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/i18n/run/index.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "npm: tsc"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "i18nTest",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/i18n/test/index.ts",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "preLaunchTask": "npm: tsc"
    }
  ]
}
